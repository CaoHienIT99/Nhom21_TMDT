@{
    ViewData["Title"] = "Login";
}

<section class="login-spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-md-5 login-form">
                <form>
                    <div>
                        <div class="content-form">
                            <h1>Wellcome to the family!</h1>
                            <p>Help us get to know you better. You know, because family stays close.</p>
                        </div>
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" placeholder="Username" />
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input required type="text" placeholder="Password" />
                        </div>
                        <div asp-validation-summary="ModelOnly" class="textdanger"></div>
                        <div class="form-group">
                            <a></a>
                            <input required type="submit" name="submit" class="btn btn-primary" value="Login" />
                        </div>
                        <div class="create-acc">
                            <p>Don't have account?</p>
                            <a class="create-btn" asp-controller="Home" asp-action="Register">Create</a>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
