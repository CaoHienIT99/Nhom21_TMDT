<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SneakerShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/404.css" />
    <link rel="stylesheet" href="~/css/checkout.css" />
    <link rel="stylesheet" href="~/css/converse.css" />
    <link rel="stylesheet" href="~/css/detail.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="~/css/register.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/Home.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Home.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="~/css/register.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

</head>
<body>
    <header>
        <div class="header-bar">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-7 top1">
                        <div class="header__top__left">
                            <p>Free shipping, 30-day return or refund guarantee.</p>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-5 top2">
                        <div class="header__top__right">
                            <div class="header__top__links">
                                <a class="top-btn" href="#">Sign up |</a>
                                <a class="top-btn" href="#">Sign in |</a>
                                <a class="top-btn" href="#">FAQs</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="nav navbar-expand-lg slider">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="header-logo">
                            <a class="navbar-logo logo" href="#">
                                <img src="img/logo1.png" />
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <nav class="header-menu">
                            <ul class="navbar-nav">
                                <li class="nav-item item1">
                                    <a class="nav-link" href="#">Home</a>
                                </li>
                                <li class="nav-item nav1">
                                    <a class="nav-link" href="#">Shoes</a>
                                    <!-- <ul class="dropdown">
                                    <li><a href="#">Converse</a></li>
                                    <li><a href="#">Vans</a></li>
                                    <li><a href="#">Palladium</a></li>
                                </ul> -->
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Clothing</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Accessories</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">About</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Contact</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                    <div class="col-lg-3">
                        <div class="header-option">
                            <ul>
                                <li class="search-bar">
                                    <a href="#"><i class="fa fa-search search-btn"></i></a>
                                </li>
                                <li class="cart-bar">
                                    <a href="#"><i class="fas fa-shopping-cart cart-btn"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </header>
    <div>
        <main role="main" >
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="row footer1">
                <div class="col-md-3 col1">
                    <div class="footer_about">
                        <div class="footer-logo">
                            <a asp-controller="Home" asp-action="Index">
                                <img src="~/img/logo.png" />
                            </a>
                        </div>
                        <p>
                            The customer is at the heart of our unique business model, which includes design.
                        </p>
                        <a href="#">
                            <img src="~/img/payment.png" />
                        </a>
                    </div>
                </div>
                <div class="col-md-3 col2">
                    <p>Shopping</p>
                    <ul>
                        <li>
                            <a class="footer-link" href="#">Clothing Store</a>
                        </li>
                        <li>
                            <a class="footer-link" href="#">Trending Shoes</a>
                        </li>
                        <li>
                            <a class="footer-link" href="#">Accessories</a>
                        </li>
                        <li>
                            <a class="footer-link" href="#">Sale</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-3 col3">
                    <p>Shopping</p>
                    <ul>
                        <li>
                            <a class="footer-link" href="#">Contact Us</a>
                        </li>
                        <li>
                            <a class="footer-link" href="#">Payment Methods</a>
                        </li>
                        <li>
                            <a class="footer-link" href="#">Delivary</a>
                        </li>
                        <li>
                            <a class="footer-link" href="#">Return & Exchanges</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-3 col4">
                    <p>Newletter</p>
                    <div class="footer-newletter">
                        <p>Be the first to know about new arrivals, look books, sales promos!</p>
                        <form>
                            <input class="newletter-input" type="text" placeholder="Your email">
                            <button type="submit">
                                <span><i class="far fa-envelope"></i></span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
